{
  "extends": "airbnb",
  "plugins": [
    "react",
    "jsx-a11y",
    "import"
  ],
  "rules": {
    "jsx-a11y/img-has-alt": "off",
    "indent": [2],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": true,
        "optionalDependencies": false,
        "peerDependencies": false
      }
    ],
    "new-cap": [
      "error",
      {
        "newIsCap": false
      }
    ],
    "no-console": [
      "error",
      {
        "allow": ["info", "error"]
      }
    ]
  },
  "env": {
    "browser": true,
    "node": true,
    "mocha": true
  }
}
